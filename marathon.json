{
  "id": "/sys/jenkins",
  "instances": 1,
  "cpus": 0.1,
  "mem": 1024,
  "disk": 0,
  "requirePorts": false,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "h0tbird/jenkins:v2.8-1",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0 }
      ],
      "privileged": false,
      "parameters": [
        { "key": "env", "value": "JENKINS_HTTPPORT=80" },
        { "key": "env", "value": "JENKINS_AJP13PORT=-1" },
        { "key": "env", "value": "JENKINS_SYSTEM_MESSAGE=Operations" },
        { "key": "env", "value": "JENKINS_ADMIN_EMAIL=nobody@nowhere" },
        { "key": "env", "value": "JENKINS_DOMAIN=marathon" },
        { "key": "env", "value": "MESOS_MASTER=zk://master-1:2181,master-2:2181,master-3:2181/mesos" },
        { "key": "env", "value": "MESOS_FRAMEWORK_NAME=sys-jenkins" },
        { "key": "env", "value": "MESOS_CHECKPOINT=true" },
        { "key": "env", "value": "MESOS_ON_DEMAND_REGISTRATION=true" },
        { "key": "env", "value": "MESOS_IDLE_TERMINATION_MINUTES=5" },
        { "key": "env", "value": "SSL_TRUST=bitbucket-sys.marathon:443" },
        { "key": "volume-driver", "value": "rexray" },
        { "key": "volume", "value": "sys-jenkins:/var/lib/jenkins" }
      ],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
